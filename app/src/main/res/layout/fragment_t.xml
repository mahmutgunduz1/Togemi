<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:backgroundTint="@color/darkBlue"
    tools:context=".ui.fragment.ToDoDetailsFragment">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/input_background"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:backgroundTint="@color/input_background"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/details_options_menu"
            app:title="@string/add_task"
            android:elevation="0dp"
            app:titleCentered="true"
            style="@style/Widget.Material3.Toolbar.Surface"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Task Title Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titleInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/task_title_hint"
                android:layout_marginTop="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_task"
                app:startIconTint="@color/bottom_nav_item_color"
                app:endIconMode="clear_text"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taskTitleInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceBodyLarge"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/description_hint"
                app:startIconDrawable="@drawable/ic_description"
                app:startIconTint="?attr/colorPrimary"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                app:layout_constraintTop_toBottomOf="@id/titleInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taskDescriptionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:gravity="top"
                    android:textAppearance="?attr/textAppearanceBodyMedium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Due Date & Time Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dueDateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/input_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                style="@style/Widget.Material3.CardView.Elevated"
                app:layout_constraintTop_toBottomOf="@id/descriptionInputLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/due_date_time"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceTitleMedium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/datePickerButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/select_date"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:icon="@drawable/ic_calendar"
                            app:iconTint="?attr/colorPrimary"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/timePickerButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/select_time"
                            android:textAllCaps="false"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:icon="@drawable/ic_time"
                            app:iconTint="?attr/colorPrimary"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Priority Section -->
            <TextView
                android:id="@+id/priorityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority"
                android:layout_marginTop="24dp"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                app:layout_constraintTop_toBottomOf="@id/dueDateCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/priorityChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintTop_toBottomOf="@id/priorityLabel">

                <com.google.android.material.chip.Chip
                    android:id="@+id/lowPriorityChip"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/input_background"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_low"
                    app:chipIcon="@drawable/ic_priority_low"
                    app:chipIconTint="@android:color/holo_green_dark"
                    app:chipStrokeWidth="1dp"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/mediumPriorityChip"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/input_background"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_medium"
                    app:chipIcon="@drawable/ic_priority_medium"
                    app:chipIconTint="@android:color/holo_orange_dark"
                    app:chipStrokeWidth="1dp"
                    style="@style/Widget.Material3.Chip.Filter"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/highPriorityChip"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/input_background"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_high"
                    app:chipIcon="@drawable/ic_priority_high"
                    app:chipIconTint="@android:color/holo_red_dark"
                    app:chipStrokeWidth="1dp"
                    style="@style/Widget.Material3.Chip.Filter"/>

            </com.google.android.material.chip.ChipGroup>

            <!-- Reminder Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reminderCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/input_background"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:layout_constraintTop_toBottomOf="@id/priorityChipGroup">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/reminderSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/set_reminder"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tags Section -->
            <TextView
                android:id="@+id/tagsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tags"
                android:layout_marginTop="24dp"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                app:layout_constraintTop_toBottomOf="@id/reminderCard"
                app:layout_constraintStart_toStartOf="parent"/>

            <HorizontalScrollView
                android:id="@+id/tagsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:fadingEdgeLength="32dp"
                android:requiresFadingEdge="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tagsLabel">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tagsChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/input_background"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/addTagChip"
                        android:backgroundTint="@color/input_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_tag"
                        app:chipIcon="@drawable/ic_add"
                        app:chipIconTint="?attr/colorPrimary"
                        style="@style/Widget.Material3.Chip.Suggestion"/>

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <!-- Attachment Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/attachmentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/input_background"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                style="@style/Widget.Material3.CardView.Outlined"
                app:layout_constraintTop_toBottomOf="@id/tagsScrollView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attachments"
                        android:textColor="?attr/colorOnSurface"
                        android:textAppearance="?attr/textAppearanceTitleMedium"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/attachFileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/add_attachment"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.TextButton"
                        app:icon="@drawable/ic_attachment"
                        app:iconTint="?attr/colorPrimary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Favorite Toggle -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/favoriteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/input_background"
                style="@style/Widget.Material3.CardView.Outlined"
                app:layout_constraintTop_toBottomOf="@id/attachmentCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/favoriteSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mark_as_favorite"
                        android:textAppearance="?attr/textAppearanceBodyLarge"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="@color/blue"
        android:layout_margin="16dp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:text="@string/save_task"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        app:icon="@drawable/ic_save"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        style="@style/Widget.Material3.Button"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>