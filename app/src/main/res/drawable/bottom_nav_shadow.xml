<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40000000"
                android:endColor="#10000000"
                android:angle="270" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Main Background Layer with Gradient -->
    <item android:top="2dp" android:bottom="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#293F5C"
                android:centerColor="#1E2A38"
                android:endColor="#172331"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Inner Highlight Layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"
                android:centerY="0.05" />
            <corners 
                android:topLeftRadius="24dp" 
                android:topRightRadius="24dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <size android:height="4dp" />
        </shape>
    </item>
</layer-list> 