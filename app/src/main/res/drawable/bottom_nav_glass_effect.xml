<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Layer with Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80293F5C"
                android:centerColor="#901E2A38"
                android:endColor="#A0172331"
                android:angle="135" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Top Glass Reflection -->
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#50FFFFFF"
                android:centerColor="#20FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270"
                android:centerY="0.2" />
            <corners 
                android:topLeftRadius="24dp" 
                android:topRightRadius="24dp" />
            <size android:height="40dp" />
        </shape>
    </item>
    
    <!-- Bottom Glass Shadow -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:centerColor="#10000000"
                android:endColor="#20000000"
                android:angle="90"
                android:centerY="0.8" />
            <corners 
                android:bottomLeftRadius="24dp" 
                android:bottomRightRadius="24dp" />
            <size android:height="40dp" />
        </shape>
    </item>
    
    <!-- Inner Border -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#30FFFFFF" />
            <corners android:radius="23dp" />
        </shape>
    </item>
</layer-list> 